@model PoroCounter2.Models.PlatformData
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer;
@{
    ViewData["Title"] = "Index";
}

<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5" style="background-color: rgba(0,0,0,0.7)">
                    <div class="card-header"><h2>@Localizer["LolWorking"]</h2></div>
                    <div class="card-body">
                        <h3> @Localizer["ServerName"]</h3>
                        <p>@Model.Name (@Model.Id)</p>

    <h3>@Localizer["ServerStatus"]</h3>
    @if (Model.Maintenances != null && Model.Maintenances.Any())
    {
        <p>@Localizer["RiotBBQ"]</p>
    }
    else
    {
        <p>@Localizer["ServerUp"]</p>
    }

                    </div>
                </div>
            </div>
        </div>
    </div>

</main>
