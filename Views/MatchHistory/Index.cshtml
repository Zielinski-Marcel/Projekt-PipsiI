@{
    ViewData["Title"] = "Index";
}

<style>
    body {
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        min-height: 100vh;
        margin: 0;
        padding: 0;
    }

    .content-wrapper {
        padding: 20px;
        border-radius: 10px;
    }

    <style >
    body {
        position: relative;
        margin: 0;
        padding: 0;
        overflow: hidden;
    }

    body::before {
        content: "";
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        filter: blur(10px);
        z-index: -1;
    }

    .content-wrapper {
        padding: 20px;
        border-radius: 10px;
        position: relative;
        z-index: 1;
    }
</style>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Match Details</title>
</head>
<body>
    <div class="container mt-4" style="background-color: rgba(0, 0, 0, 0.7); outline: 2px solid black; color: white;">

        <div class="match-summary card p-3 mb-3" style="background-color: rgba(0, 0, 0, 0);">

            <h4 class="card-title" style="background-color: rgba(0, 0, 0, 0);">Match Summary</h4>
            <div class="row">
                <div class="col-md-5" style="background-color: rgba(0, 0, 0, 0);">Mode: <span id="match-mode">Ranked</span></div>
            </div>
            <div class="row">
                <div class="col-md-5" style="background-color: rgba(0, 0, 0, 0);">Winner: <span id="match-outcome">BLUE</span></div>
            </div>
        </div>

        <div class="team-stats card p-3 mb-3 " style="background-color: rgba(0, 0, 0, 0);">

            <h4 class="card-title" style="background-color: rgba(0, 0, 0, 0);">Team Stats</h4>
            <div class="row">
                <div class="col-md-6">
                    <h5>Team Blue</h5>
                    <p>Kills: 45 | Gold: 65,000 | Towers: 9</p>
                </div>
                <div class="col-md-6">
                    <h5>Team Red</h5>
                    <p>Kills: 30 | Gold: 58,000 | Towers: 4</p>
                </div>
            </div>
        </div>

        <div class="player-stats card p-3 mb-3" style="background-color: rgba(0, 0, 0, 0);">
            <h4 class="card-title" style="background-color: rgba(0, 0, 0, 0);">Player Stats</h4>
            <div class="table-responsive" style="background-color: rgba(0, 0, 0, 0);">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Champion</th>
                            <th>Player</th>
                            <th>KDA</th>
                            <th>CS</th>
                            <th>Gold</th>
                            <th>Items</th>
                        </tr>
                    </thead>
                    <tbody>

                                @foreach (var players in Model.players)
                                {
                                @if (players.TeamId == 1)
                                {
                                    <tr style="background-color:rgba(0, 0, 255, 0.6)">

                                        <td class="align-middle"><img src="https://static.wikia.nocookie.net/leagueoflegends/images/7/7e/Ashe_OriginalSquare.png" alt="Champion" class="img-fluid">&nbsp;&nbsp;&nbsp;&nbsp;Ashe</td>
                                        <td class="align-middle">Player1</td>
                                        <td class="align-middle">10/2/8</td>
                                        <td class="align-middle">150</td>
                                        <td class="align-middle">15,000</td>
                                        <td class="align-middle">
                                            <img src="https://static.wikia.nocookie.net/leagueoflegends/images/e/ea/Red_Melee_MinionSquare.png" />
                                            <img src="https://static.wikia.nocookie.net/leagueoflegends/images/e/ea/Red_Melee_MinionSquare.png" />
                                            <img src="https://static.wikia.nocookie.net/leagueoflegends/images/e/ea/Red_Melee_MinionSquare.png" />
                                            <img src="https://static.wikia.nocookie.net/leagueoflegends/images/e/ea/Red_Melee_MinionSquare.png" />
                                            <img src="https://static.wikia.nocookie.net/leagueoflegends/images/e/ea/Red_Melee_MinionSquare.png" />
                                            <img src="https://static.wikia.nocookie.net/leagueoflegends/images/e/ea/Red_Melee_MinionSquare.png" />
                                            <img src="https://static.wikia.nocookie.net/leagueoflegends/images/e/ea/Red_Melee_MinionSquare.png" />
                                        </td>
                                    </tr>
                                }
                            }
                            
                                                            @foreach (var players in Model.players)
                                {
                                @if (players.TeamId == 2)
                                {
                            <tr style="background-color:rgba(255, 0, 0, 0.6)">
                            <td class="align-middle"><img src="https://static.wikia.nocookie.net/leagueoflegends/images/7/7e/Ashe_OriginalSquare.png" alt="Champion" class="img-fluid">&nbsp;&nbsp;&nbsp;&nbsp;Ashe</td>
                            <td class="align-middle">Player1</td>
                            <td class="align-middle">10/2/8</td>
                            <td class="align-middle">150</td>
                            <td class="align-middle">15,000</td>
                            <td class="align-middle">
                                <img src="https://static.wikia.nocookie.net/leagueoflegends/images/e/ea/Red_Melee_MinionSquare.png" />
                                <img src="https://static.wikia.nocookie.net/leagueoflegends/images/e/ea/Red_Melee_MinionSquare.png" />
                                <img src="https://static.wikia.nocookie.net/leagueoflegends/images/e/ea/Red_Melee_MinionSquare.png" />
                                <img src="https://static.wikia.nocookie.net/leagueoflegends/images/e/ea/Red_Melee_MinionSquare.png" />
                                <img src="https://static.wikia.nocookie.net/leagueoflegends/images/e/ea/Red_Melee_MinionSquare.png" />
                                <img src="https://static.wikia.nocookie.net/leagueoflegends/images/e/ea/Red_Melee_MinionSquare.png" />
                                <img src="https://static.wikia.nocookie.net/leagueoflegends/images/e/ea/Red_Melee_MinionSquare.png" />
                            </td>
                        </tr>
                                }
                            }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
    <br />
    <br />

</body>
</html>
