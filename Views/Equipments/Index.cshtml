@model IEnumerable<PPSI.Nowy_folder.Equipment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Slot1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slot2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slot3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slot4)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slot5)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BootsId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrinketId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayerId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Slot1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slot2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slot3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slot4)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slot5)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BootsId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrinketId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
