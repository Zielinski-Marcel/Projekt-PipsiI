@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Localizer["EmailSent"]</title>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card" style="background-color: rgba(0, 0, 0, 0.7);">
                    <div class="card-header text-center">
                        <h2>@Localizer["EmailSent"]</h2>
                    </div>
                    <div class="card-body">
                        <p>@Localizer["EmailConfirm"]</p>
                        <p>@Localizer["SpamFolder"]</p>

                    </div>
                    <div class="card-footer text-center">
                        <a href="/" class="btn btn-primary">@Localizer["BackHome"]</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
