@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Localizer["ContactUs"]</title>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card" style="background-color: rgba(0, 0, 0, 0.7);">
                    <div class="card-header text-center">
                        <h2>@Localizer["ContactUs"]</h2>
                    </div>
                    <div class="card-body">
                        <form asp-action="Sent" method="post">
                            <div class="form-group">
                                <label for="email"><p>@Localizer["EmailAddress"]</p></label>
                                <input type="email" class="form-control" id="email" name="email" placeholder="@Localizer["EnterEmail"]" required /><br />
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">@Localizer["Submit"]</button>
                        </form>
                    </div>
                    <div class="card-footer text-center text-white">
                        @Localizer["WeContact"]
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
